{
  "extends": "tslint:recommended",
  "rules": {
    "arrow-parens": false,
    "max-line-length": {
      "options": [
        120
      ]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    },
    "ordered-imports": false,
    "trailing-comma": false,
    "whitespace": [true, "check-branch", "check-operator", "check-typecast"],
    "typedef": [
      true,
      "call-signature",
      "property-declaration"
    ],
    "curly": true
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  }
}